<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BackgroundColor">#1E2026</Color>
    <Color x:Key="BackgroundColorLight">#2A2F36</Color>
    <Color x:Key="BackgroundColorGap">#14151A</Color>

    <Color x:Key="ForegroundColorAccent">#F0B90B</Color>
    
    <SolidColorBrush 
        x:Key="BackgroundBrush" 
        Color="{DynamicResource BackgroundColor}" />
    <SolidColorBrush 
        x:Key="BackgroundLightBrush" 
        Color="{DynamicResource BackgroundColorLight}" />
    <SolidColorBrush 
        x:Key="BackgroundGapBrush" 
        Color="{DynamicResource BackgroundColorGap}" />

    <SolidColorBrush 
        x:Key="ForegroundAccentBrush" 
        Color="{DynamicResource ForegroundColorAccent}" />

</ResourceDictionary>