<UserControl x:Class="SubAccountManagement.App.Pages.ErrorPages.ErrorPageInterceptor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubAccountManagement.App.Pages.ErrorPages"
             xmlns:errorPage="clr-namespace:SubAccountManagement.App.ViewModels.ErrorPage"
             mc:Ignorable="d"
             Height="auto" Width="auto">
    <UserControl.DataContext>
        <errorPage:ErrorPageInterceptorViewModel />
    </UserControl.DataContext>
    <Grid>
        <ContentControl Height="500" Width="500" Content="{Binding ErrorPage}" />
    </Grid>
</UserControl>
